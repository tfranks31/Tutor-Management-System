<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>AddTutorServlet</servlet-name>
    <servlet-class>servlet.AddTutorServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>PayVoucherServlet</servlet-name>
    <servlet-class>servlet.PayVoucherServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlet.LoginServlet</servlet-class>
  </servlet>


  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>AddTutorServlet</servlet-name>
    <url-pattern>/addTutor</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>PayVoucherServlet</servlet-name>
    <url-pattern>/payVoucher</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>./_view/login.jsp</welcome-file>
  </welcome-file-list>
</web-app>
